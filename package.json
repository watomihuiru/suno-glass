{
  "name": "suno-glass-app",
  "version": "1.0.0",
  "description": "Suno AI Music Generator with Glassmorphism UI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest --testPathPattern=backend",
    "test:frontend": "jest --testPathPattern=frontend"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^23.2.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "projects": [
      {
        "displayName": "backend",
        "testMatch": [
          "<rootDir>/test/backend/**/*.test.js"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "frontend",
        "testMatch": [
          "<rootDir>/test/frontend/**/*.test.js"
        ],
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
          "<rootDir>/test/frontend/setup.js"
        ]
      }
    ]
  }
}
